{
  "name": "authMS",
  "version": "1.0.1",
  "main": "server.js",
  "type": "module",
  "keywords": [],
  "author": "Muhammad Karim",
  "license": "MIT",
  "description": "",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon --ext ts,js,mjs,cjs,json --watch src --exec node -- --no-warnings=ExperimentalWarning --loader ts-node/esm src/server.ts",
    "build": "tsc",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "test:unit": "cross-env NODE_ENV=test jest --selectProjects unit --coverage --detectOpenHandles",
    "test:integration": "cross-env NODE_ENV=test jest --selectProjects integration --coverage --detectOpenHandles",
    "tests": "npm run test:unit && npm run test:integration",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "prepare": "husky",
    "release": "standard-version"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "mongoose": "^8.16.2",
    "morgan": "^1.10.0",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/eslint-parser": "^7.26.8",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-typescript": "^7.27.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.20.0",
    "@jest/globals": "^30.2.0",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^24.7.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "babel-jest": "^29.7.0",
    "commitizen": "^4.3.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^28.14.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-node-exports-resolver": "^1.1.6",
    "lint-staged": "^15.5.2",
    "mongodb-memory-server": "^10.1.4",
    "node-mocks-http": "^1.17.2",
    "nodemon": "^3.1.9",
    "prettier": "^3.6.2",
    "standard-version": "^9.5.0",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
